<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/yuriichuk</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">1234</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="com.yuriichuk.model.Address"/>
        <mapping class="com.yuriichuk.model.Brand"/>
        <mapping class="com.yuriichuk.model.LoadedSnack"/>
        <mapping class="com.yuriichuk.model.Snack"/>
        <mapping class="com.yuriichuk.model.Technician"/>
        <mapping class="com.yuriichuk.model.VendingMachine"/>
        <mapping class="com.yuriichuk.model.VendingMachineMoneyLoading"/>
        <mapping class="com.yuriichuk.model.VendingMachineMoneyUnloading"/>
        <mapping class="com.yuriichuk.model.VendingMachineSnacksLoading"/>
        <mapping class="com.yuriichuk.model.VendingMachineSoldSnack"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>